{
  "name": "backend",
  "version": "4.2.2",
  "description": "qapline backend",
  "main": "app.js",
  "scripts": {
    "start": "ts-node server.ts",
    "devstart": "SENTRY_ENABLED=false nodemon server.ts",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "migrate": "node ./v1-2/migration/migration.js",
    "prebuild": "rimraf dist/ && npm run mjml",
    "mjml": "ts-node scripts/convertMJML.ts",
    "build": "tsc --project tsconfig.build.json",
    "check-types": "tsc --noEmit --project tsconfig.build.json",
    "postbuild": "cp -r templates dist/templates && cp -r resources dist/resources",
    "lint": "eslint \"{v3,resources}/**/*.ts\"",
    "lint:fix": "eslint \"{v3,resources}/**/*.ts\" --fix",
    "format": "prettier --write \"v3/**/*.ts\"",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org koala42 --project qapline-be ./dist && sentry-cli --url https://sentry.k42.dev sourcemaps upload --org koala42 --project qapline-be ./dist",
    "prepare": "husky"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/../../v3/$1"
    },
    "rootDir": "test/v3",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/qapline/backend.git"
  },
  "author": "Miroslav Šiřina",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/qapline/backend/issues"
  },
  "dependencies": {
    "@breejs/ts-worker": "^2.0.0",
    "@casl/ability": "^6.7.2",
    "@google-cloud/logging": "^11.2.0",
    "@google-cloud/secret-manager": "^6.0.1",
    "@google-cloud/storage": "^7.15.2",
    "@google-cloud/tasks": "^6.0.1",
    "@hapi/joi": "^17.1.1",
    "@prisma/client": "^4.11.0",
    "@sendgrid/mail": "^8.1.1",
    "@sentry/cli": "^2.32.2",
    "@sentry/node": "^8.18.0",
    "axios": "1.5.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "bree": "^9.2.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.0.1",
    "express": "~4.17.1",
    "express-rate-limit": "^7.4.1",
    "express-ws": "^4.0.0",
    "form-data": "^4.0.1",
    "glob": "^11.0.3",
    "helmet": "^4.5.0",
    "http": "^0.0.1-security",
    "i18next": "^23.5.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.44",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-cloud-storage": "^3.1.0",
    "nodemailer": "^6.9.5",
    "pg": "^8.6.0",
    "prisma-soft-delete-middleware": "^1.1.2",
    "twing": "^6.0.0-beta.1",
    "ws": "^7.5.9",
    "xlsx-template": "^1.4.3",
    "xml-js": "^1.6.11",
    "xmlbuilder2": "^3.1.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.9",
    "@types/jest": "^27.4.1",
    "@types/json2csv": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mjml": "^4.7.4",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.10",
    "@types/nodemailer": "^6.4.11",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "29.6.2",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.0",
    "prisma": "^4.11.0",
    "supertest": "^6.1.3",
    "swagger-autogen": "^2.23.1",
    "swagger-ui-express": "^4.6.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.2.9",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "prisma": {
    "schema": "v3/db/schema.prisma"
  },
  "nodemonConfig": {
    "ignore": [
      "*.json"
    ]
  }
}
